<%= form_for(@hirecare) do |f| %>
  <% if @hirecare.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hirecare.errors.count, "error") %> prohibited this hirecare from being saved:</h2>

      <ul>
      <% @hirecare.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :badge , 'Kennzeichen' %><br>
    <%= f.text_field :badge %>
  </div>
