  </div>
  <div class="field">
    <%= f.label :brand, 'Marke' %><br>
    <%= f.text_field :brand, :value => 'Smart' %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :smoking, 'Raucher-Kfz?' %><br>
    <%= f.check_box :smoking %>
  </div>
  <div class="field">
    <%= f.label :defects, 'tech. Mängel' %><br>
    <%= f.text_area :defects %>
  </div>
  <div class="field">
    <%= f.label :status_id %><br>
	
    <%= f.number_field :status_id %>
  </div>
  <div class="field">
    <%= f.label :tech_check, 'TÜV-Datum' %><br>
    <%= f.date_select :tech_check %>
  </div>
  <div class="field">
    <%= f.label :comment, 'Bemerkung' %><br>
